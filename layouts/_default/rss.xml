{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $pages = where $pages "Section" "!=" "store" -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <channel>
        <title>{{ if eq .Title .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{ . }} on {{ end }}{{ .Site.Title }}{{ end }}</title>
        <link>{{ .Permalink }}</link>
        <description>Recent content {{ if ne  .Title  .Site.Title }}{{ with .Title }}in {{.}} {{ end }}{{ end }}on {{ .Site.Title }}</description>
        <generator>Hugo -- gohugo.io</generator>
        {{- with .Site.LanguageCode }}
        <language>{{.}}</language>{{end}}
        <copyright>Copyright {{ now.Year }} {{ .Site.Params.author.fullName }}</copyright>
        {{- if not .Date.IsZero }}
        <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
        {{- with .OutputFormats.Get "RSS" }}
        {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
        {{- end -}}
        {{- range $pages }}
        <item>
            <title>{{ .Title }}</title>
            <link>{{ .Permalink }}</link>
            {{- if not .Date.IsZero }}
            <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>{{ end }}
            <dc:creator>{{ default .Site.Params.author.name .Params.author }}</dc:creator>
            <guid>{{ .Permalink }}</guid>
            <category>{{ .Section }}</category>
            <description>
                {{- $thumb := .Resources.GetMatch "thumb.*" -}}
                {{- if $thumb -}}
                    {{- printf "<a href=%q><img src=%q width=%q height=%q ></a><br>" .Permalink $thumb.Permalink (string $thumb.Width) (string $thumb.Height) -}}
                {{- end -}}
                {{- .Summary | html -}}
            </description>
            <content:encoded>
                {{- $comicImage := .Resources.GetMatch (printf "%s.*" .File.ContentBaseName) -}}
                {{- if $comicImage -}}
                    {{- $comicImagePreScaled := .Resources.GetMatch (printf "%s_scaled.*" .File.ContentBaseName) -}}
                    {{- if $comicImagePreScaled -}}
                        {{- $comicImage = $comicImagePreScaled -}}
                    {{- else if and (gt $comicImage.Width 550) (not (eq $comicImage.MediaType.SubType "gif")) -}}
                        {{- $comicImage = $comicImage.Resize "550x jpg" -}}
                    {{- end -}}
                    {{- printf "<p><a href=%q><img src=%q width=%q height=%q ></a></p>" .Permalink $comicImage.Permalink (string $comicImage.Width) (string $comicImage.Height) -}}
                {{- end -}}
                {{- .Content | html -}}
            </content:encoded>
        </item>
        {{- end }}
    </channel>
</rss>
